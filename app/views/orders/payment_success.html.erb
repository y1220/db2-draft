<div class="main users-index">
    <h1 class="users-heading">Payment Succsess</h1>
    <div class="extab">
        <h2>Product Package: <%= ProductPackage.find(@order.product_package_id).name%></h2>
        <table id="customers">
            <tr>
                <th>Product</th>
                <th>Activated from</th>
                <th>Deactivated at</th>
            </tr>
        <% @products.each do |p|%>
            <tr>
                <td><%= p.name%></td>
                <td><%= @order.start_date.strftime('%m-%d-%Y')%></td>
                <td><%= (@order.start_date + @order.validity_period.period.month).strftime('%m-%d-%Y')%></td>
            </tr>
        <%end%>
        </table>
        <br/>
        <table id="customers">
            <tr>
                <th>Optional Product</th>
                <th>Activated from</th>
                <th>Deactivated at</th>
            </tr>
        <% @optional_products.each do |p|%>
            <tr>
                <td><%= p.name%></td>
                <td><%= @order.start_date.strftime('%m-%d-%Y')%></td>
                <td><%= (@order.start_date + @order.validity_period.period.month).strftime('%m-%d-%Y')%></td>
            </tr>
        <%end%>
        </table>
    </div>
</div>
